<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 边框颜色值 -->
    <item>
        <shape>
            <solid android:color="#f4f4f4" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">

        <!-- 设置只有底部有边框 -->
        <shape>
            <corners android:radius="0dp"/>
            <solid android:color="#ffffff" />
        </shape>
    </item>

</layer-list>