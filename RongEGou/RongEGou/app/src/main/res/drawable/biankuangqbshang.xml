<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 边框颜色值 -->
    <item>
        <shape>
            <solid android:color="#dddddd" />
        </shape>
    </item>
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="2dp">

        <!-- 设置只有底部有边框 -->
        <shape>
            <corners android:radius="0dp" />
            <solid android:color="@color/bai" />
        </shape>
    </item>

</layer-list>