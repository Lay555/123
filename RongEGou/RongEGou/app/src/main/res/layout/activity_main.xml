<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bai"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <baseTools.Cannotscroll_viewpager
        android:id="@+id/mainact_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#f4f4f4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/mainact_sy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mainact_ivsy"
                android:layout_width="23dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="3dp"
                android:background="#00000000"
                android:src="@drawable/selector_sy" />

            <TextView
                android:id="@+id/mainact_tesy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="首页"
                android:textColor="@color/select_te"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainact_fl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mainact_ivfl"
                android:layout_width="23dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="3dp"
                android:background="#00000000"
                android:src="@drawable/selector_dd" />

            <TextView
                android:id="@+id/mainact_tefl"
                android:layout_width="23dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="下单"
                android:textColor="@color/select_te"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainact_xd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mainact_ivxd"
                android:layout_width="23dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="3dp"
                android:background="#00000000"
                android:src="@mipmap/search_no" />

            <TextView
                android:id="@+id/mainact_texd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="搜索"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainact_wd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mainact_ivwd"
                android:layout_width="23dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="3dp"
                android:background="#00000000"
                android:src="@drawable/selector_per" />

            <TextView
                android:id="@+id/mainact_tewd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="我的"
                android:textColor="@color/select_te"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>