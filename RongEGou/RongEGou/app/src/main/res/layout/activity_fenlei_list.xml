<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bai"
    android:orientation="vertical"
    tools:context=".HomePage.fenlei.fenlei_list">

    <baseTools.DaoHang_top
        android:id="@+id/fenlei_dh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/danhei1" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fenlei_recyhen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:background="@color/bai"
                android:paddingLeft="12dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="@color/danhei1" />


            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/address_smtr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srlAccentColor="@color/hei"
                app:srlEnablePreviewInEditMode="true"
                app:srlPrimaryColor="#ffffff">

                <com.scwang.smartrefresh.layout.header.ClassicsHeader
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/address_recy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:srlAccentColor="@color/hei"
                    app:srlPrimaryColor="#ffffff" />

            </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fenlei_lintop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">


            <TextView
                android:id="@+id/mainact_tesy1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/bai"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="分类"
                android:textColor="@color/select_te"
                android:textSize="12sp" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/fenlei_recyctop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bai"
                android:paddingLeft="12dp" />

            <View
                android:id="@+id/flss_viewkb"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:alpha="0.4"
                android:background="#000000" />
        </LinearLayout>

        <ImageView
            android:id="@+id/flss_imreturn1"
            android:layout_width="12dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginTop="4dp"
            android:layout_marginRight="12dp"
            android:background="@color/bai"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/jtxia" />

        <ImageView
            android:id="@+id/hp_share"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="20dp"
            android:src="@mipmap/lanmu_share" />
    </FrameLayout>

</LinearLayout>