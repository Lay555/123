<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addressit_linall"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bai"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/addressit_tename"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|bottom"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"
            android:text="姓名"
            android:textStyle="bold"
            android:textColor="@color/hei333"
            android:textSize="@dimen/tz" />

        <TextView
            android:id="@+id/addressit_tepho"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|bottom"
            android:textStyle="bold"
            android:textColor="@color/hei333"
            android:textSize="@dimen/tz" />
    </LinearLayout>

    <TextView
        android:id="@+id/addressit_teaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="7dp"
        android:paddingLeft="15dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="姓名"
        android:textColor="@color/hei333"
        android:textSize="@dimen/tz" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/heif4" />

    <LinearLayout
        android:id="@+id/dh_lincz"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dh_immoren"
            android:layout_width="17dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/bot_selec" />

        <TextView
            android:id="@+id/addressit_temoren"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingLeft="7dp"
            android:text="默认地址"
            android:textColor="@color/hei92"
            android:textSize="@dimen/tz" />

        <ImageView
            android:id="@+id/dh_imbianji"
            android:layout_width="13dp"
            android:layout_height="match_parent"
            android:layout_marginStart="137dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/edit" />

        <TextView
            android:id="@+id/addressit_tebianji"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingLeft="7dp"
            android:text="编辑"
            android:textColor="@color/hei92"
            android:textSize="@dimen/tz" />

        <ImageView
            android:id="@+id/dh_imsc"
            android:layout_width="13dp"
            android:layout_height="match_parent"
            android:layout_marginStart="27dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/delete" />

        <TextView
            android:id="@+id/addressit_tesc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingLeft="7dp"
            android:text="删除"
            android:textColor="@color/hei92"
            android:textSize="@dimen/tz" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/heif4" />
</LinearLayout>
