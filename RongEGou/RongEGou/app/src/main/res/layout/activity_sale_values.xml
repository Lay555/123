<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bai"
    android:orientation="vertical">

    <include
        android:id="@+id/salevalue_novalue"
        layout="@layout/nosealvalueteam"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/salevalue_linvalue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="姓名"
                android:textColor="@color/hei333"
                android:textSize="@dimen/tz" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="社长号"
                android:textColor="@color/hei333"
                android:textSize="@dimen/tz" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="日销售额"
                android:textColor="@color/hei333"
                android:textSize="@dimen/tz" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="月销售额"
                android:textColor="@color/hei333"
                android:textSize="@dimen/tz" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/salevalue_Tename"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/hei333"
                android:textSize="@dimen/tz" />

            <TextView
                android:id="@+id/salevalue_Tesz"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/hei333"
                android:textSize="@dimen/tz" />

            <TextView
                android:id="@+id/salevalue_Teday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/hei333"
                android:textSize="@dimen/tz" />

            <TextView
                android:id="@+id/salevalue_Temon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/hei333"
                android:textSize="@dimen/tz" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="11dp"
            android:background="#f4f4f4"
            android:visibility="gone" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/salevalue_recy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>