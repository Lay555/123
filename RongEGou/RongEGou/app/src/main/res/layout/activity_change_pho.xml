<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/danhei1"
    android:orientation="vertical"
    tools:context=".Percenter.Perziliao.ChangePho">

    <baseTools.DaoHang_top
        android:id="@+id/changepho_dh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="71dp"
        android:layout_marginBottom="19dp"
        android:gravity="center"
        android:text="当前绑定手机号"
        android:textColor="@color/hei92"
        android:textSize="@dimen/tz12" />

    <TextView
        android:id="@+id/changepho_tepho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:gravity="center"
        android:text="00000000"
        android:textColor="#686868"
        android:textSize="@dimen/tzd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="34dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/changepho"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="23dp"
            android:layout_marginEnd="36dp"
            android:src="@mipmap/pho" />


        <EditText
            android:id="@+id/changepho_edpho"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="12dp"
            android:background="@color/bai"
            android:gravity="center_vertical"
            android:hint="请输入新手机号"
            android:inputType="number"
            android:maxLength="11"
            android:singleLine="true"
            android:textColor="@color/hei"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/changepho"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="23dp"
            android:layout_marginEnd="36dp"
            android:src="@mipmap/pho" />


        <EditText
            android:id="@+id/changepho_edyzm"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="12dp"
            android:background="@color/bai"
            android:gravity="center_vertical"
            android:hint="6位验证码"
            android:inputType="number"
            android:maxLength="4"
            android:textColor="@color/hei"
            android:textSize="12sp" />

        <com.doudui.rongegou.LoginAct.TimerTextView
            android:id="@+id/changepho_timerte"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/changepho1"
            android:text="获取验证码"
            android:textSize="11sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/changepho_teok"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="71dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/addressround2"
        android:gravity="center"
        android:text="确定更改手机号"
        android:textColor="@color/bai"
        android:textSize="@dimen/tz15" />
</LinearLayout>