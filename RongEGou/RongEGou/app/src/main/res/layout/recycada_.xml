<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linall"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bai"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/xdada_lintop"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/xdada_tebh"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:gravity="center_vertical|bottom"
            android:paddingLeft="15dp"
            android:text="产品详情"
            android:textColor="@color/hei"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/xdada_tezt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:gravity="center_vertical|bottom"
            android:paddingLeft="12dp"
            android:paddingRight="14dp"
            android:text="产品详情"
            android:textColor="@color/hon"
            android:textSize="14sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.doudui.rongegou.Goods.guige.MyGridView
            android:id="@+id/xdada_gridv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:numColumns="1" />

        <ImageView
            android:id="@+id/ima_khxg"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"
            android:src="@mipmap/khxd"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/xdada_tespnum"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:gravity="center_vertical|bottom"
            android:paddingLeft="15dp"
            android:text="产品详情"
            android:textColor="@color/hei"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/xdada_teprice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:gravity="center_vertical|bottom"
            android:paddingLeft="12dp"
            android:paddingRight="14dp"
            android:text="产品详情"
            android:textColor="@color/hei"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/xdada_teshr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:gravity="center_vertical|bottom"
            android:paddingLeft="15dp"
            android:text="产品详情"
            android:textColor="@color/hei"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/xdada_tetime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:gravity="center_vertical|bottom"
            android:paddingLeft="12dp"
            android:paddingRight="14dp"
            android:text="产品详情"
            android:textColor="@color/hei"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/danhei1" />

    <LinearLayout
        android:id="@+id/orderddatails_linbot"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/xdada_tezhxx"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:textColor="@color/bai"
            android:textSize="13dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/xdada_tecz1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/yuanjiaobk"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="立即接单"
            android:textColor="@color/hei333"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/xdada_tecz2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/yuanjiaobk"
            android:enabled="true"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="立即接单"
            android:textColor="@color/hei333"
            android:textSize="13dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/danhei1" />

</LinearLayout>
