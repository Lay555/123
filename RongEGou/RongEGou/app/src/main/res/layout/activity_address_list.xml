<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/heif4"
    android:orientation="vertical"
    tools:context=".Percenter.Address.AddressList">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dh_imreturn"
            android:layout_width="9dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/fh" />

        <EditText
            android:id="@+id/address_edit"
            android:layout_width="240dp"
            android:layout_height="31dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/addressround"
            android:drawableLeft="@mipmap/ss"
            android:inputType="text"
            android:hint="  搜索地址"
            android:maxLength="15"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@color/hei333"
            android:textSize="@dimen/tz" />

        <TextView
            android:id="@+id/address_tesearch"
            android:layout_width="60dp"
            android:layout_height="31dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/addressround1"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@color/bai"
            android:textSize="@dimen/tz" />

    </LinearLayout>


    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/address_smtr"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:srlAccentColor="@color/hei"
        app:srlEnablePreviewInEditMode="true"
        app:srlPrimaryColor="#ffffff">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/address_recy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <TextView
        android:id="@+id/addressit_teadd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/addressround2"
        android:gravity="center"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="9dp"
        android:text="添加新地址"
        android:textColor="@color/bai"
        android:textSize="@dimen/tz15" />
</LinearLayout>