<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bai"
    android:orientation="vertical"
    tools:context=".Order.payinfoact">

    <baseTools.DaoHang_top
        android:id="@+id/duizhang_dh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#f4f4f4" />

    <RelativeLayout
        android:id="@+id/duizhang_reje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="46dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="37dp"
            android:layout_marginRight="12dp"
            android:src="@mipmap/qianbao1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="37dp"
            android:text="订单总额"
            android:textColor="@color/hei333"
            android:textSize="@dimen/tz15" />

        <TextView
            android:id="@+id/duizhang_teprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="60dp"
            android:text="22"
            android:textColor="@color/hon"
            android:textSize="20sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/duizhang_tetme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:gravity="center"
        android:text="订单总额"
        android:textColor="#929292"
        android:textSize="@dimen/tz" />

    <TextView
        android:id="@+id/duizhang_tepay"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="38dp"
        android:layout_marginRight="55dp"
        android:background="@mipmap/quzhifu_bj"
        android:gravity="center"
        android:text="去支付"
        android:textColor="#6E6EF9"
        android:textSize="@dimen/tz15" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="33dp"
        android:background="#f4f4f4"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="账单详情"
        android:textColor="@color/hei333"
        android:textSize="@dimen/tz15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="47dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="商品总额"
            android:textColor="#929292"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/duizhang_teprice1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:gravity="center_vertical"
            android:text="1111"
            android:textColor="@color/hon"
            android:textSize="16sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#f4f4f4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="47dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="运费"
            android:textColor="#929292"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/duizhang_teyunfei"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:gravity="center_vertical"
            android:text="1111"
            android:textColor="@color/hon"
            android:textSize="16sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#f4f4f4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="47dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="订单数"
            android:textColor="#929292"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/duizhang_tenum"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:gravity="center_vertical"
            android:text="1111"
            android:textColor="@color/hon"
            android:textSize="16sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#f4f4f4" />


</LinearLayout>