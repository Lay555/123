<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bai"
    android:orientation="vertical"
    tools:context=".Order.order">

    <RelativeLayout
        android:id="@+id/order_retop"
        android:layout_width="match_parent"
        android:layout_height="47dp">

        <ImageView
            android:id="@+id/order_imreturn"
            android:layout_width="30dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/fh" />

        <EditText
            android:id="@+id/order_edit"
            android:layout_width="220dp"
            android:layout_height="31dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/fenleitop1"
            android:hint="  搜索关键词"
            android:imeOptions="actionDone"
            android:maxLength="50"
            android:paddingLeft="40dp"
            android:singleLine="true"
            android:textColor="#666666"
            android:textColorHint="#999999"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/order_imss"
            android:layout_width="20dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="53dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ss" />

        <TextView
            android:id="@+id/order_tess"
            android:layout_width="55dp"
            android:layout_height="31dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/order_edit"
            android:background="@drawable/searchyuanjiao"
            android:gravity="center"
            android:text="搜索"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="1dp"
        android:background="@color/heif4" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/order_recychen"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="6dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_marginTop="1dp"
        android:background="@color/heif4" />


    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/order_smtr"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:srlAccentColor="@color/hei"
        app:srlEnablePreviewInEditMode="true"
        app:srlPrimaryColor="#ffffff">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="50dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/order_noorder"
                layout="@layout/noorderlout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/order_recy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:srlAccentColor="@color/hei"
            app:srlPrimaryColor="#ffffff" />

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <LinearLayout
        android:id="@+id/order_linbot"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/biankuangqbshang"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/order_teprice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="47dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="合计:￥106.20"
            android:textColor="@color/hei"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/order_tepay"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="12dp"
            android:layout_toRightOf="@id/order_edit"
            android:background="@drawable/searchyuanjiao"
            android:gravity="center"
            android:text="立即支付"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>