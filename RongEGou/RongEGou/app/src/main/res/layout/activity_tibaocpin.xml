<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bai"
    android:orientation="vertical"
    tools:context=".Percenter.Gonyinshang.tibaocpin">

    <baseTools.DaoHang_top
        android:id="@+id/tbcp_fh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#f4f4f4"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="选择产品分类"
                android:textColor="#8b8b8b"
                android:textSize="@dimen/tz12" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/tbcp_recyc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#f4f4f4"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="产品名称"
                android:textColor="#8b8b8b"
                android:textSize="@dimen/tz12" />

            <EditText
                android:id="@+id/tbcp_edname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bai"
                android:hint="请输入产品名称"
                android:maxLength="40"
                android:minHeight="50dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/hei"
                android:textColorHint="#ccc"
                android:textSize="13sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#f4f4f4"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="产品组合"
                android:textColor="#8b8b8b"
                android:textSize="@dimen/tz12" />

            <EditText
                android:id="@+id/tbcp_edzuhe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bai"
                android:hint="请输入产品组合"
                android:maxLength="40"
                android:minHeight="50dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/hei"
                android:textColorHint="#ccc"
                android:textSize="13sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#f4f4f4"
                android:gravity="center_vertical"
                android:lineSpacingExtra="5dp"
                android:paddingLeft="16dp"
                android:text="其他通路在售价格页面截图（线上线下都可以），最低不得低于两张图片"
                android:textColor="#8b8b8b"
                android:textSize="@dimen/tz12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="17dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/salevalue_imtp1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="31dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:src="@mipmap/add_image" />

                <ImageView
                    android:id="@+id/salevalue_imtp2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="31dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:src="@mipmap/add_image" />

                <ImageView
                    android:id="@+id/salevalue_imtp3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="31dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:src="@mipmap/add_image" />

                <ImageView
                    android:id="@+id/salevalue_imtp4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="31dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:src="@mipmap/add_image" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#f4f4f4"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="供货价"
                android:textColor="#8b8b8b"
                android:textSize="@dimen/tz12" />

            <EditText
                android:id="@+id/tbcp_edprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bai"
                android:hint="请输入供货价"
                android:maxLength="15"
                android:minHeight="50dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/hei"
                android:textColorHint="#ccc"
                android:textSize="13sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#f4f4f4"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="最低库存数量"
                android:textColor="#8b8b8b"
                android:textSize="@dimen/tz12" />

            <EditText
                android:id="@+id/tbcp_edkcun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bai"
                android:hint="请输入最低库存数量"
                android:maxLength="15"
                android:minHeight="50dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/hei"
                android:textColorHint="#ccc"
                android:textSize="13sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#f4f4f4"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="补货周期"
                android:textColor="#8b8b8b"
                android:textSize="@dimen/tz12" />

            <EditText
                android:id="@+id/tbcp_edbuhuo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bai"
                android:hint="请输入补货周期"
                android:maxLength="15"
                android:minHeight="50dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/hei"
                android:textColorHint="#ccc"
                android:textSize="13sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#f4f4f4"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="产品买点介绍（不少于100字）"
                android:textColor="#8b8b8b"
                android:textSize="@dimen/tz12" />

            <RelativeLayout
                android:id="@+id/heka_reinp"
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <EditText
                    android:id="@+id/tbcp_edmiaoshu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/roundbackground_qrdd"
                    android:gravity="left"
                    android:lineSpacingExtra="5dp"
                    android:hint="请输入产品买点介绍"
                    android:maxLength="200"
                    android:padding="8dp"
                    android:textColor="#666666"
                    android:textColorHint="#999999"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tbcp_tenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:text="300"
                    android:textColor="#999999"
                    android:textSize="11sp" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#f4f4f4"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="产品图片（不得低于2张，清晰）"
                android:textColor="#8b8b8b"
                android:textSize="@dimen/tz12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="17dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/salevalue_imtpc1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="31dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:src="@mipmap/add_image" />

                <ImageView
                    android:id="@+id/salevalue_imtpc2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="31dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:src="@mipmap/add_image" />

                <ImageView
                    android:id="@+id/salevalue_imtpc3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="31dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:src="@mipmap/add_image" />

                <ImageView
                    android:id="@+id/salevalue_imtpc4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="31dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:src="@mipmap/add_image" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#f4f4f4"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="生产日期及保质期"
                android:textColor="#8b8b8b"
                android:textSize="@dimen/tz12" />

            <EditText
                android:id="@+id/tbcp_edscrq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bai"
                android:hint="请输入生产日期"
                android:maxLength="15"
                android:minHeight="50dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/hei"
                android:textColorHint="#ccc"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#f4f4f4" />

            <EditText
                android:id="@+id/tbcp_edbzq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bai"
                android:hint="请输入保质期"
                android:maxLength="15"
                android:minHeight="50dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/hei"
                android:textColorHint="#ccc"
                android:textSize="13sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#f4f4f4"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="组合重量及包装尺寸"
                android:textColor="#8b8b8b"
                android:textSize="@dimen/tz12" />

            <EditText
                android:id="@+id/tbcp_edzczl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bai"
                android:hint="请输入组合重量"
                android:maxLength="15"
                android:minHeight="50dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/hei"
                android:textColorHint="#ccc"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#f4f4f4" />

            <EditText
                android:id="@+id/tbcp_edbz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bai"
                android:hint="请输入包装尺寸"
                android:maxLength="15"
                android:minHeight="50dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/hei"
                android:textColorHint="#ccc"
                android:textSize="13sp" />

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#f4f4f4">

        <TextView
            android:id="@+id/tbcp_tj"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="9dp"
            android:background="@drawable/addressround1"
            android:gravity="center"
            android:text="提交信息"
            android:textColor="@color/bai"
            android:textSize="@dimen/tz" />
    </RelativeLayout>

</LinearLayout>