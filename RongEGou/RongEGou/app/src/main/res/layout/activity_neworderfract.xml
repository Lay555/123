<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bai"
    android:orientation="vertical"
    tools:context=".Order.neworder.orderyusou">

    <RelativeLayout
        android:id="@+id/order_retop"
        android:layout_width="match_parent"
        android:layout_height="47dp">

        <ImageView
            android:id="@+id/order_imreturn"
            android:layout_width="42dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:paddingLeft="12dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/fh" />

        <EditText
            android:id="@+id/order_edit"
            android:layout_width="220dp"
            android:layout_height="31dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/fenleitop1"
            android:hint="  搜索关键词"
            android:imeOptions="actionDone"
            android:maxLength="50"
            android:paddingLeft="40dp"
            android:singleLine="true"
            android:textColor="#666666"
            android:textColorHint="#999999"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/order_imss"
            android:layout_width="20dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="53dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ss" />

        <TextView
            android:id="@+id/order_tess"
            android:layout_width="50dp"
            android:layout_height="31dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/order_edit"
            android:background="@drawable/searchyuanjiao"
            android:gravity="center"
            android:text="搜索"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/te_wzh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="未转化"
            android:textColor="@color/select_te" />

        <TextView
            android:id="@+id/te_yzh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="已转化"
            android:textColor="@color/select_te" />

        <TextView
            android:id="@+id/te_yqx"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="已取消"
            android:textColor="@color/select_te" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="#f4f4f4" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/order_smtr"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:srlAccentColor="@color/hei"
        app:srlEnablePreviewInEditMode="true"
        app:srlPrimaryColor="#ffffff">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="50dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/order_noorder"
                layout="@layout/noorderlout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/order_recy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#f4f4f4" />
        </LinearLayout>

        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:srlAccentColor="@color/hei"
            app:srlPrimaryColor="#ffffff" />

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>