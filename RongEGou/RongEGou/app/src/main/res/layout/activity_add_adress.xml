<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bai"
    android:orientation="vertical"
    tools:context=".Percenter.Address.AddAdress">

    <baseTools.DaoHang_top
        android:id="@+id/addaddzdy_dh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/addadded_name"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginLeft="15dp"
        android:background="@color/bai"
        android:hint="请输入名字"
        android:inputType="text"
        android:textColor="@color/hei"
        android:textColorHint="@color/ccc"
        android:textSize="@dimen/tz" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/heif4" />

    <EditText
        android:id="@+id/addadded_pho"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginLeft="15dp"
        android:background="@color/bai"
        android:hint="请输入电话号码"
        android:inputType="number"
        android:maxLength="11"
        android:textColor="@color/hei"
        android:textColorHint="@color/ccc"
        android:textSize="@dimen/tz" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/heif4" />

    <EditText
        android:id="@+id/addadded_idcard"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginLeft="15dp"
        android:background="@color/bai"
        android:digits="0123456789Xx"
        android:hint="请输入身份证号码(选填)"
        android:maxLength="18"
        android:textColor="@color/hei"
        android:textColorHint="@color/ccc"
        android:textSize="@dimen/tz" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/heif4" />

    <LinearLayout
        android:id="@+id/addaddlin_dizhi"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/addaddte_dizhi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="47dp"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:text="所在地区"
            android:textColor="@color/hei"
            android:textColorHint="@color/ccc"
            android:textSize="@dimen/tz" />


        <ImageView
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:src="@mipmap/jty" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/heif4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="72dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:text="详细地址："
            android:textColor="@color/hon"
            android:textSize="@dimen/tz" />

        <EditText
            android:id="@+id/addadded_dizhi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:background="@color/bai"
            android:gravity="start"
            android:hint="如道路、门牌号、小区、楼栋号、单元室等"
            android:lineSpacingExtra="6dp"
            android:paddingTop="12dp"
            android:textColorHint="@color/hei92"
            android:textSize="@dimen/tz12" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/heif4" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/heif4">

        <TextView
            android:id="@+id/addaddte_teadd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="9dp"
            android:background="@drawable/addressround2"
            android:gravity="center"
            android:text="添加新地址"
            android:textColor="@color/bai"
            android:textSize="@dimen/tz15" />
    </RelativeLayout>
</LinearLayout>