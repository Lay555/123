<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/biankuangqbxia1"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/xdzi_imsp"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:src="@mipmap/search_no" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/xdada_tename"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:gravity="center_vertical|bottom"
            android:singleLine="true"
            android:text="产品详情"
            android:textColor="@color/hei333"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/xdada_tegg"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="产品详情"
            android:textColor="@color/hei92"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/xdada_teprice"
                android:layout_width="0dp"
                android:layout_height="39dp"
                android:layout_weight="1"
                android:gravity="center_vertical|top"
                android:singleLine="true"
                android:text="产品详情"
                android:textColor="@color/hei333"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/xdada_tenum"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:text="产品详情"
                android:textColor="@color/hei92"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
