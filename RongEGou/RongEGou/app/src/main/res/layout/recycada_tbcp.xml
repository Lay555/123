<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="38dp"
    android:background="@drawable/biankuangqbxia2"
    android:id="@+id/recyctb_lin"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/recyctb_tename"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_weight="1"
        android:background="@null"
        android:gravity="center_vertical"
        android:text="家居用品"
        android:textColor="@color/hei333"
        android:textSize="@dimen/tz12" />

    <ImageView
        android:id="@+id/recyctb_ima"
        android:layout_width="17dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="16dp"
        android:src="@mipmap/gou_xuanzhong" />
</LinearLayout>
