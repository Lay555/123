<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bai"
    android:orientation="vertical"
    tools:context=".Goods.GoodsDetails">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="42dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="商品详情"
            android:textColor="#000000"
            android:textSize="@dimen/tz15" />

        <ImageView
            android:id="@+id/gdt_imfh"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:src="@mipmap/fh" />

        <ImageView
            android:id="@+id/gdt_imfx"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:paddingRight="17dp"
            android:src="@mipmap/share" />

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/gdt_refrag"
                android:layout_width="match_parent"
                android:layout_height="360dp">

                <fragment
                    android:id="@+id/gdt_viewpagerlunbos"
                    android:name="baseTools.lunbo.CycleViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:descendantFocusability="blocksDescendants"
                    tools:layout="@layout/view_cycle_viewpager_contet" />
            </RelativeLayout>

            <TextView
                android:id="@+id/gdt_teprice"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:textColor="@color/hon"
                android:textSize="@dimen/tz" />

            <TextView
                android:id="@+id/gdt_tetxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:gravity="center_vertical"
                android:lineSpacingExtra="4dp"
                android:paddingLeft="14dp"
                android:paddingRight="21dp"
                android:paddingBottom="4dp"
                android:textColor="@color/hei333"
                android:textSize="@dimen/tz" />

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="@color/heif4" />


            <LinearLayout
                android:id="@+id/gdt_lingg"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="14dp"
                    android:paddingRight="12dp"
                    android:text="选择"
                    android:textColor="@color/hei92"
                    android:textSize="@dimen/tz" />


                <TextView
                    android:id="@+id/gdt_tegg"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="14dp"
                    android:paddingRight="12dp"
                    android:text="规格"
                    android:textColor="#333333"
                    android:textSize="@dimen/tz" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:paddingRight="17dp"
                    android:src="@mipmap/jty" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="@color/heif4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/te_spxq"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingLeft="14dp"
                    android:text="商品详情"

                    android:textColor="@color/select_te"
                    android:textSize="@dimen/tz" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/hon" />

                <TextView
                    android:id="@+id/te_spmajiaxiu"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingRight="12dp"
                    android:text="买家秀"
                    android:textColor="@color/select_te"
                    android:textSize="@dimen/tz" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="12dp"
                android:background="@color/heif4" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyc_pics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <WebView
                android:id="@+id/gdt_web"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="WebViewLayout" />

            <WebView
                android:id="@+id/gdt_webmajiaxiu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                tools:ignore="WebViewLayout" />

            <include
                android:id="@+id/gdt_nomaijiaxiu"
                layout="@layout/nomaijaxiu" />

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/addressit_teadd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="9dp"
            android:background="@drawable/addressround2"
            android:gravity="center"
            android:text="立即下单"
            android:textColor="@color/bai"
            android:textSize="@dimen/tz15" />
    </RelativeLayout>
</LinearLayout>