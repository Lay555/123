<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/danhei1"
    android:orientation="vertical"
    tools:context=".LoginAct.Loginact">

    <ImageView
        android:layout_width="114dp"
        android:layout_height="114dp"
        android:layout_marginLeft="123dp"
        android:layout_marginTop="87dp"
        android:layout_marginBottom="78dp"
        android:src="@mipmap/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="23dp"
            android:src="@mipmap/pho" />

        <EditText
            android:id="@+id/login_pho"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@color/danhei1"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="#333333"
            android:textColorHint="#929292"
            android:textSize="@dimen/tz" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="#dddddd" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginTop="17dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="9dp"
            android:src="@mipmap/yzm" />

        <EditText
            android:id="@+id/login_yzm"
            android:layout_width="170dp"
            android:layout_height="22dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="9dp"
            android:background="@color/danhei1"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="4"
            android:minWidth="78dp"
            android:textColor="#333333"
            android:textColorHint="#929292"
            android:textSize="@dimen/tz" />


        <com.doudui.rongegou.LoginAct.TimerTextView
            android:id="@+id/loginp_tegetyzm"
            android:layout_width="95dp"
            android:layout_height="38dp"
            android:layout_marginTop="1dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginEnd="24dp"
            android:background="@drawable/yuanjiaolog"
            android:gravity="center"
            android:text="获取验证码"
            android:layout_marginBottom="2dp"
            android:textColor="@color/hei333"
            android:textSize="@dimen/tz" />
    </RelativeLayout>

    <View
        android:layout_width="198dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@color/danhei" />

    <TextView
        android:id="@+id/loginp_telog"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="44dp"
        android:layout_marginRight="5dp"
        android:background="@mipmap/dlyj"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/bai"
        android:textSize="@dimen/tzd" />

    <TextView
        android:paddingTop="7dp"
        android:id="@+id/loginp_tezc"
        android:layout_width="67dp"
        android:layout_height="25dp"
        android:layout_marginLeft="147dp"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="注册新用户"
        android:visibility="gone"
        android:textColor="@color/hon"
        android:background="@drawable/biankuangqbxialogin"
        android:textSize="@dimen/tzd" />

</LinearLayout>