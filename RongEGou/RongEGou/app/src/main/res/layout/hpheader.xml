<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="-6dp"
    android:layout_marginRight="-7dp"
    android:background="@color/bai"
    android:clipChildren="false"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/sye_refrag"
        android:layout_width="match_parent"
        android:layout_height="135dp">

        <fragment
            android:id="@+id/sye_viewpagerlunbos"
            android:name="baseTools.lunbo.CycleViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/hpheader_lin1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hpheader_ima1"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="13dp"
                android:src="@mipmap/wxtj_icon" />

            <TextView
                android:id="@+id/hpheader_te1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="4dp"
                android:text="每日产品"
                android:textColor="@color/hei333"
                android:textSize="@dimen/tz12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/hpheader_lin2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hpheader_ima2"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="13dp"
                android:src="@mipmap/jl_icon" />

            <TextView
                android:id="@+id/hpheader_te2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="4dp"
                android:text="捡漏专区"
                android:textColor="@color/hei333"
                android:textSize="@dimen/tz12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/hpheader_lin3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hpheader_ima3"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="13dp"
                android:src="@mipmap/xp_icon" />

            <TextView
                android:id="@+id/hpheader_te3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="4dp"
                android:text="每日新品"
                android:textColor="@color/hei333"
                android:textSize="@dimen/tz12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/hpheader_lin4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hpheader_ima4"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="13dp"
                android:src="@mipmap/bh_icon" />

            <TextView
                android:id="@+id/hpheader_te4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="4dp"
                android:text="每日补货"
                android:textColor="@color/hei333"
                android:textSize="@dimen/tz12" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/hpheader_im5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            android:src="@mipmap/guqiupaihangbang" />

        <ImageView
            android:id="@+id/hpheader_im6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/hpheader_im7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
             />

        <ImageView
            android:id="@+id/hpheader_im8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:layout_weight="1" />

    </LinearLayout>


    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="@color/heif4" />

</LinearLayout>
